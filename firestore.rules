// Firestore Security Rules for MindSpace
// Copy this to your Firebase Console -> Firestore Database -> Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.token.email == userId;
    }
    
    // Allow mentors to read and write their own mentor documents
    match /mentors/{mentorId} {
      allow read, write: if request.auth != null && request.auth.token.email == mentorId;
    }
    
    // Allow anyone authenticated to read online mentors (for displaying count)
    // Allow mentors to write their own online status
    match /onlineMentors/{mentorEmail} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == mentorEmail;
    }
    
    // Allow authenticated users to read and write posts
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }
    
    // Allow authenticated users to read and write comments
    match /comments/{commentId} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}